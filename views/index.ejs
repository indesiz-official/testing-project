  <i class="bi bi-chat-dots-fill" style="font-size: 1.5rem;"></i>
  <span id="feedbackText" style="position: absolute; right: 70px; background-color: #00c6ff; color: white; padding: 5px 10px; border-radius: 5px; white-space: nowrap; opacity: 0; transition: opacity 0.2s;">Feedback</span>
</a>

<script>
  const button = document.getElementById('feedbackButton');
  const text = document.getElementById('feedbackText');

  button.addEventListener('mouseenter', () => {
    button.style.transform = 'scale(1.2)';
    text.style.opacity = 1;
  });

  button.addEventListener('mouseleave', () => {
    button.style.transform = 'scale(1)';
    text.style.opacity = 0;
  });
</script>

