  align-items: center;
  justify-content: center;
  overflow: hidden;
  font-size: 18px;
  font-weight: bold;
  position: relative;
}
.scrolling-wrapper {
  display: inline-flex;
  white-space: nowrap;
  animation: scroll 20s linear infinite;
}
.banner:hover .scrolling-wrapper {
  animation-play-state: paused;
}
.scrolling-text span {
  margin-right: 100px;
}
@keyframes scroll {
  0% { transform: translateX(0%); }
  100% { transform: translateX(-50%); }
}

