<!-- ÊåâÁ≥ªÂàóÂàÜÁªÑÊòæÁ§∫‰∫ßÂìÅ -->
<div class="container mt-4">
  <% collections.forEach(collection => { %>
    <!-- Á≥ªÂàóÊ†áÈ¢ò -->
    <div class="text-center my-5">
      <h2 class="fw-bold border-bottom pb-2 d-inline-block">
        <%= collection.collectionName %>
      </h2>
    </div>

    <!-- ‰∫ßÂìÅÂàóË°® -->
    <div class="row g-4">
      <% collection.products.forEach(product => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card h-100 shadow-sm">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            <div class="card-body text-center d-flex flex-column">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="card-text fw-bold">$<%= product.price.toFixed(2) %></p>
              
              <a href="/product/<%= product.productId %>" class="btn btn-dark mb-2">Click In</a>
              
              <% if (product.status === 'soldout') { %>
                <span class="badge bg-danger">Sold Out</span>
              <% } else { %>
                <form action="/cart/add" method="POST" class="mt-auto d-flex justify-content-center align-items-center gap-2">
                  <input type="hidden" name="productId" value="<%= product.productId %>">
                  <input type="number" name="quantity" value="1" min="1" style="width: 60px;" required>
                  <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% }) %>
</div>


