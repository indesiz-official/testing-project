<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Complete 订单成功 - Indesiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container my-5">
  <div class="card p-4 shadow-sm">
    <h2 class="text-success mb-4 text-center">🎉 订单成功！</h2>
    <p class="fs-5 text-center">感谢您, <strong><%= user.username %></strong></p>

    <!-- 订单明细表 -->
    <table class="table table-bordered mt-4">
      <thead class="table-light">
        <tr>
          <th>商品名称</th>
          <th>数量</th>
          <th>单价</th>
          <th>小计</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td>$<%= item.subTotal.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">运费</th>
          <th>$<%= order.shipping.toFixed(2) %></th>
        </tr>
        <tr>
          <th colspan="3" class="text-end">总额</th>
          <th>$<%= order.total.toFixed(2) %></th>
        </tr>
      </tfoot>
    </table>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-primary fw-bold">🏠 返回首页</a>
    </div>
  </div>
</div>

</body>
</html>
