<!DOCTYPE html>
<html>
<head>
  <title>订单列表 Order Lists</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container my-4">
  <h2>📦 所有订单</h2>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>订单号</th>
        <th>顾客名</th>
        <th>电话</th>
        <th>地址</th>
        <th>产品</th>
        <th>数量</th>
        <th>订单时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.orderId %></td>
          <td><%= order.username %></td>
          <td><%= order.phone %></td>
          <td><%= order.address %></td>
          <td><%= order.productName %></td>
          <td><%= order.quantity %></td>
          <td><%= new Date(order.orderDate).toLocaleString() %></td>
          <td>
            <a href="/admin/orders/<%= order.orderId %>/print" target="_blank" class="btn btn-sm btn-outline-primary">🖨️ 打印</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
