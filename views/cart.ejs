<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Cart Page - Indesiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

<!-- ÂØºËà™Ê†è -->
<nav class="navbar navbar-expand-sm navbar-dark bg-white">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <a class="navbar-brand" href="/">
        <img src="/images/INDESIZ.png" alt="INDESIZ" style="height:50px;">
      </a>
    </div>
    <!-- Â∑¶‰æß Shop-->
    <div class="dropdown me-3">
      <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Shop</a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/">All</a></li>
        <% collections.forEach(c => { %>
          <li><a class="dropdown-item" href="/collection/<%= c.collectionId %>"><%= c.collectionName %></a></li>
        <% }) %>
      </ul>
    </div>

    <!-- Âè≥‰æß -->
    <div class="d-flex align-items-center flex-grow-1 justify-content-end">
    <% if (username) { %>
        <a href="/profile" class="nav-link text-dark me-3">
            üë§ <%= username %>
        </a>
        <a href="/logout" class="nav-link text-dark me-3">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    <% } else { %>
        <a href="/login" class="nav-link text-dark me-3">
            <i class="bi bi-person-circle"></i> Login
        </a>
        <a href="/register" class="nav-link text-dark me-3">
            <i class="bi bi-person-plus"></i> Register
        </a>
    <% } %>
    <a href="/cart" class="nav-link text-dark">
        <i class="bi bi-cart"></i> Cart Ôºà<%= cartCount %>Ôºâ
    </a>
    </div>

  </div>
</nav>

<!-- Cart Section -->
<div class="container py-5">
  <h2 class="mb-4 text-center">üõí My Cart Ë¥≠Áâ©ËΩ¶</h2>

  <% if (items.length === 0) { %>
    <div class="alert alert-info text-center">Your cart is empty. ÊÇ®ÁöÑË¥≠Áâ©ËΩ¶ÁõÆÂâçÊòØÁ©∫ÁöÑ„ÄÇ</div>
  <% } else { %>
    <!-- Cart Table -->
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>Product ÂïÜÂìÅ</th>
            <th>Image ÂõæÁâá</th>
            <th>Quantity Êï∞Èáè</th>
            <th>Size Â∞∫ÂØ∏</th>
            <th>Unit Price Âçï‰ª∑</th>
            <th>Total ÊÄªËÆ°</th>
            <th>Remove ÁßªÈô§</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; %>
          <% items.forEach(item => { 
              grandTotal += parseFloat(item.total); %>
            <tr>
              <td><%= item.productName %></td>
              <td><img src="/<%= item.image %>" width="80" /></td>
              <td>
                <form action="/cart/update" method="POST" class="d-inline">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <button class="btn btn-sm btn-outline-secondary" name="action" value="decrease">-</button>
                  <span class="mx-2"><%= item.quantity %></span>
                  <button class="btn btn-sm btn-outline-secondary" name="action" value="increase">+</button>
                </form>
              </td>
              <td>
                <form action="/cart/update" method="POST" class="d-inline">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <select name="size" class="form-select form-select-sm ms-2" onchange="this.form.submit()">
                    <option value="S" <%= item.size === 'S' ? 'selected' : '' %>>S</option>
                    <option value="M" <%= item.size === 'M' ? 'selected' : '' %>>M</option>
                    <option value="L" <%= item.size === 'L' ? 'selected' : '' %>>L</option>
                    <option value="XL" <%= item.size === 'XL' ? 'selected' : '' %>>XL</option>
                  </select>
                </form>
              </td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>$<%= item.total %></td>
              <td>
                <form action="/cart/remove" method="POST">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <button type="submit" class="btn btn-danger btn-sm">üóë</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <!-- Checkout -->
  <div class="d-flex justify-content-end">
    <form action="/cart/checkout" method="POST">
      <a href="/checkout" class="btn btn-success me-2">Check Out Go Payment</a>
    </form>
  </div>
<% } %>

  <div class="mt-3">
    <a href="/" class="btn btn-link">‚Üê Continue Shopping</a>
  </div>
</div>

</body>
</html>
