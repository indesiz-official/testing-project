<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= product.productName %> Page - Indesiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
      .carousel-item img {
          height: 500px; /* ‰Ω†ÂèØ‰ª•Ë∞ÉÊï¥È´òÂ∫¶ */
          object-fit: cover;
          width: 100%;
      }
    </style>
</head>
<body>
  <!-- ÂØºËà™Ê†è -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-white">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <a class="navbar-brand" href="/">
          <img src="/images/INDESIZ.png" alt="INDESIZ" style="height:50px;">
        </a>
      </div>
      <!-- Â∑¶‰æß Shop-->
      <div class="dropdown me-3">
        <div class="dropdown">
          <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">Shop</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/">All</a></li>
            <li><a class="dropdown-item" href="#">Clothing</a></li>
            <li><a class="dropdown-item" href="#">Pants</a></li>
          </ul> 
        </div>
      </div>

      <!-- Âè≥‰æß -->
      <div class="d-flex align-items-center flex-grow-1 justify-content-end">
      <% if (username) { %>
          <a href="/profile" class="nav-link text-dark me-3">
              üë§ <%= username %>
          </a>
          <a href="/logout" class="nav-link text-dark me-3">
              <i class="bi bi-box-arrow-right"></i> Logout
          </a>
      <% } else { %>
          <a href="/login" class="nav-link text-dark me-3">
              <i class="bi bi-person-circle"></i> Login
          </a>
          <a href="/register" class="nav-link text-dark me-3">
              <i class="bi bi-person-plus"></i> Register
          </a>
      <% } %>
      <a href="/cart" class="nav-link text-dark">
          <i class="bi bi-cart"></i> Cart Ôºà<%= cartCount %>Ôºâ
      </a>
      </div>

    </div>
  </nav>

  <!-- ÂÖ®Â±èËΩÆÊí≠Âõæ -->
  <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <!-- ‰∏ªÂõæ -->
      <div class="carousel-item active" content="product-image">
        <img src="/<%= product.image %>" alt="Image 1"  onerror="this.src='/images/default-product.png'">
      </div>

      <% if (product.image2) { %>
      <div class="carousel-item">
        <img src="/<%= product.image2 %>" alt="Image 2" onerror="this.src='/images/default-product.png'">
      </div>
      <% } %>

      <% if (product.image3) { %>
      <div class="carousel-item">
        <img src="/<%= product.image3 %>" alt="Image 3" onerror="this.src='/images/default-product.png'">
      </div>
      <% } %>

      <% if (product.image4) { %>
      <div class="carousel-item">
        <img src="/<%= product.image4 %>" alt="Image 4" onerror="this.src='/images/default-product.png'">
      </div>
      <% } %>
    </div>

    <!-- Â∑¶Âè≥ÊåâÈíÆ -->
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>

  <!-- ‰∫ßÂìÅ‰ø°ÊÅØÂå∫ -->
  <div class="container mt-5">
      <% if (product) { %>
          <h2 class="text-center"><%= product.productName %></h2>
          <p class="text-center">Price: $<%= product.price %></p>

          <% if (product.status === 'soldout') { %>
              <div class="alert alert-danger text-center">This product is currently Sold Out.</div>
          <% } else { %>
              <form action="/cart/add" method="POST" class="mx-auto" style="max-width: 400px;">
                  <input type="hidden" name="productId" value="<%= product.productId %>">

                  <label for="size">Size:</label>
                  <select id="size" name="size" required class="form-select mb-3">
                      <option value="">--Select Size--</option>
                      <option value="XS">XS</option>
                      <option value="S">S</option>
                      <option value="M">M</option>
                      <option value="L">L</option>
                      <option value="XL">XL</option>
                  </select>

                  <label for="quantity">Quantity:</label>
                  <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control mb-3" required>

                  <button type="submit" class="btn btn-dark w-100">Add to Cart</button>
              </form>
          <% } %>

          <!-- Â∞∫Á†ÅË°® -->
          <div class="text-center mt-4">
              <img src="https://cdn.shopify.com/s/files/1/1279/7839/files/tshirt-size-chart-tr_1024x1024.png?v=1713540449"
                  style="max-width: 600px;" alt="Size Chart">
          </div>
      <% } else { %>
          <div class="alert alert-warning text-center mt-5">
              No product found.
          </div>
      <% } %>

      <!-- ËøîÂõû‰∏ªÈ°µ -->
      <div class="text-center mt-4">
          <a href="/" class="btn btn-secondary">Back to Home</a>
      </div>
  </div>

</body>
</html>
