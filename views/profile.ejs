<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= username %>'s Profile - Indesiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .card-custom {
      border-radius: 0.5rem;
      box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
    }
    .table img {
      border-radius: 0.25rem;
    }
    .input-group .btn {
      height: 38px;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/images/INDESIZ.png" alt="INDESIZ" style="height:50px;"></a>
      
      <div class="d-flex align-items-center ms-auto">
        <% if (username) { %>
        <div class="dropdown me-3">
          <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
            üë§ <%= username %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><a class="dropdown-item" href="/logout">Logout</a></li>
          </ul>
        </div>
        <% } else { %>
          <a href="/login" class="nav-link text-dark me-3"><i class="bi bi-person-circle"></i> Login</a>
          <a href="/register" class="nav-link text-dark me-3"><i class="bi bi-person-plus"></i> Register</a>
        <% } %>
        <a href="/cart" class="nav-link text-dark"><i class="bi bi-cart"></i> Cart (<%= cartCount %>)</a>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row g-4">
      <h2 class="fa-solid">My Profile ÊàëÁöÑ‰∏™‰∫∫ËµÑÊñô</h2>
      <!-- Left: Profile Card -->
      <div class="col-md-4 col-sm-12">
        <div class="card card-custom p-3">
          <h4 class="card-title mb-3">üë§ Hi, <%= username %></h4>
          <ul class="list-group list-group-flush">

            <!-- Email -->
            <li class="list-group-item">
              <i class="bi bi-envelope me-2"></i>
              <% if (editField === 'email') { %>
              <form action="/profile/updateField" method="POST" class="input-group">
                <input type="hidden" name="field" value="email">
                <input type="email" name="value" value="<%= email %>" class="form-control">
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
              <% } else { %>
                <%= email %>
                <a href="/profile?editField=email" class="ms-2 text-secondary"><i class="bi bi-pencil-square"></i></a>
              <% } %>
            </li>

            <!-- Address -->
            <li class="list-group-item">
              <i class="bi bi-geo-alt me-2"></i>
              <% if (editField === 'address') { %>
              <form action="/profile/updateField" method="POST" class="input-group">
                <input type="hidden" name="field" value="address">
                <input type="text" name="value" value="<%= address %>" class="form-control">
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
              <% } else { %>
                <%= address %>
                <a href="/profile?editField=address" class="ms-2 text-secondary"><i class="bi bi-pencil-square"></i></a>
              <% } %>
            </li>

            <!-- Phone -->
            <li class="list-group-item">
              <i class="bi bi-telephone me-2"></i>
              <% if (editField === 'phone') { %>
              <form action="/profile/updateField" method="POST" class="input-group">
                <input type="hidden" name="field" value="phone">
                <input type="text" name="value" value="<%= phone %>" class="form-control">
                <button type="submit" class="btn btn-primary">Save</button>
              </form>
              <% } else { %>
                <%= phone %>
                <a href="/profile?editField=phone" class="ms-2 text-secondary"><i class="bi bi-pencil-square"></i></a>
              <% } %>
            </li>

            <!-- Payment Method -->
            <li class="list-group-item">
              <i class="bi bi-credit-card me-2"></i>
              <% if (editField === 'paymentMethod') { %>
              <form action="/profile/updateField" method="POST">
                <input type="hidden" name="field" value="paymentMethod">
                <select name="value" class="form-select" onchange="toggleCardInput(this)">
                  <option value="TNG" <%= paymentMethod==='TNG'?'selected':'' %>>TNG</option>
                  <option value="PayNow" <%= paymentMethod==='PayNow'?'selected':'' %>>PayNow</option>
                  <option value="Bank Transfer" <%= paymentMethod==='Bank Transfer'?'selected':'' %>>Bank Transfer</option>
                  <option value="VISA Card" <%= paymentMethod==='VISA Card'?'selected':'' %>>VISA Card</option>
                </select>

                <div id="cardInput" class="mt-2 <%= paymentMethod==='VISA Card'?'d-block':'d-none' %>">
                  <label class="form-label">VISA Card Number</label>
                  <input type="password" name="cardNumber" class="form-control" placeholder="Enter 16-digit VISA number"
                    value="<%= cardNumber||'' %>" pattern="\d{16}" maxlength="16" inputmode="numeric" required>
                  <small class="text-muted">16 digits only</small>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
              </form>

              <script>
                function toggleCardInput(select){
                  document.getElementById('cardInput').style.display = select.value==='VISA Card'?'block':'none';
                }
              </script>

              <% } else { %>
                <%= paymentMethod || 'Êú™ËÆæÁΩÆ' %>
                <% if(paymentMethod==='VISA Card' && cardNumber){ %>
                  (**** **** **** <%= cardNumber.slice(-4) %>)
                <% } %>
                <a href="/profile?editField=paymentMethod" class="ms-2 text-secondary"><i class="bi bi-pencil-square"></i></a>
              <% } %>
            </li>
          </ul>
        </div>

        <a href="/" class="btn btn-secondary mt-3 w-100">‚Üê Back to Home</a>
      </div>

      <!-- Right: Orders Table -->
      <div class="col-md-8 col-sm-12">
        <h3>Your Orders ÊÇ®ÁöÑËÆ¢Âçï</h3>
        <% if(orders.length===0){ %>
          <p>You haven't ordered anything yet. ÊÇ®ËøòÊ≤°Êúâ‰∏ãËøáËÆ¢Âçï„ÄÇ</p>
        <% } else { %>
          <table class="table table-bordered table-hover bg-white shadow-sm">
            <thead class="table-light">
              <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
                <tr>
                  <td><%= order.productName %></td>
                  <td><img src="/<%= order.image %>" width="80"></td>
                  <td><%= order.quantity %></td>
                  <td>$<%= (order.quantity*order.price).toFixed(2) %></td>
                  <td><%= new Date(order.orderDate).toLocaleString() %></td>
                  <td><span class="badge bg-success"><%= order.status||'Paid' %></span></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>

    </div>
  </div>

</body>
</html>
